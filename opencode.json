{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "external_directory": "allow",
    "bash": {
      "*": "allow",
      "git push*": "ask",
      "git push --force*": "deny",
      "git reset --hard*": "deny",
      "git clean -fd*": "deny",
      "rm -rf /*": "deny",
      "sudo *": "ask",
      "ssh *": "ask",
      "scp *": "ask",
      "npm publish*": "ask",
      "pnpm publish*": "ask",
      "docker push*": "ask"
    }
  },
  "mcp": {
    "sudocode-mcp": {
      "type": "local",
      "command": [
        "sudocode-mcp"
      ]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest",
        "--headless"
      ],
      "enabled": true
    }
  },
  "skills": {
    "paths": [
      "./skills",
      "./.skills",
      "/home/salee/.agents/skills"
    ]
  }
}
